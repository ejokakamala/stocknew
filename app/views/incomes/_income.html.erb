<div id="<%= dom_id income %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Date:</strong>
    <%= income.date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= income.category %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= income.quantity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Unit price:</strong>
    <%= income.unit_price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total amount:</strong>
    <%= income.total_amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= income.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Batch:</strong>
    <%= income.batch_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this income", income, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this income", edit_income_path(income), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
