<section class="w-full bg-gray-100 dark:bg-gray-900">
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
          <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
          Flock App   
      </a>
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                Forgot your password?
              </h1>
              <%= form_for(resource, as: resource_name,  class: "space-y-4 md:space-y-6", url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <div class="mb-2">
                      <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                      <%= f.email_field :email, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "name@company.com", required: true %>
                  </div>
                  
                  <div class="w-full mt-5 text-white bg-blue-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" >
                    <%= button_to "Send me reset password instructions" %>
                  </div>
                  <p class="text-sm font-light text-gray-500 dark:text-gray-400 mt-3">
                     Don't have an Account? <%= link_to "Sign up", user_registration_path, class: "font-medium text-primary-600 hover:underline dark:text-primary-500" %>
                  </p>
              <% end %>
          </div>
      </div>
  </div>
</section>

