<h3 class="font-bold text-3xl text-underline text-blue-400 text-center">Summary by Batches </h3>
<div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-8">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-blue-200 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="p-4">
                   
                </th>
                <th scope="col" class="py-3">
                    Batch No.
                </th>
                <th scope="col" class="py-3">
                    Total Flock
                </th>
                <th scope="col" class="py-3">
                    Total Income
                </th>
                <th scope="col" class="py-3">
                    Total Expenses
                </th>
                <th scope="col" class="py-3">
                    Profit
                </th>
                <th scope="col" class="py-3">
                    Loss
                </th>
                <th scope="col" class="py-3">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
          <% @batches.each do |batch| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="w-4 p-4">
                    <div class="flex items-center">
                        <input id="checkbox-table-search-1" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                        <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
                    </div>
                </td>
                <th scope="row" class="py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  <%= batch.batch_no %>
                </th>
                <td class="py-4">
                  <%= batch.flocks.map(&:current_stock).sum %>
                </td>
                <td class="py-4">
                  <%= number_to_currency(batch.incomes.map(&:amount).sum, :unit => "Tshs. ", :delimiter => ",") %>
                </td>
                <td class="py-4">
                  <%= number_to_currency(batch.expenses.map(&:total).sum, :unit => "Tshs. ", :delimiter => ",") %>
                </td>
                <td class="py-4">
                  <% if batch.incomes.map(&:amount).sum > batch.expenses.map(&:total).sum %>
                  <span class="text-success">
                    <strong><%= number_to_currency(batch.incomes.map(&:amount).sum - batch.expenses.map(&:total).sum, :unit => "Tshs. ") %><strong>
                  </span>
                  <% else %>
                    <span class="text-danger"><strong> 0</strong></span>
                  <% end %>
                </td>
                <td class="py-4">
                  <% if batch.incomes.map(&:amount).sum < batch.expenses.map(&:total).sum %>
                    <span class="text-danger">
                      <strong><%= number_to_currency(batch.expenses.map(&:total).sum - batch.incomes.map(&:amount).sum, :unit => "Tshs. ")  %><strong>
                    </span>
                    <% else %>
                      <span class="text-success"><strong>0</strong></span>
                  <% end %>
                </td>
                
                <td class="flex items-center py-4">
                  <%= link_to "Show", batch, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                </td>
            </tr>
          <% end %>
        </tbody>
    </table>
    </div>