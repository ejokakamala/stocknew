<div id="<%= dom_id expense %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Date:</strong>
    <%= expense.date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= expense.category %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= expense.quantity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Unit price:</strong>
    <%= expense.unit_price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total amount:</strong>
    <%= expense.total_amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= expense.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Batch:</strong>
    <%= expense.batch.batch_no %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this expense", expense, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this expense", edit_expense_path(expense), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
